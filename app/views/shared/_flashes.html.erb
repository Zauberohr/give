<% if notice %>
  <div class="alert alert-info alert-dismissible fade show m-2" data-controller="alert" role="alert">
    <%= notice %>
    <button type="button" data-alert-target="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible fade show m-2" data-controller="alert" role="alert">
    <%= alert %>
    <button type="button" data-alert-target="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
