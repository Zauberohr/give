
<div class="user-profile">
  <!-- User Info Section -->
 <h1><%= @user.email.split("@")[0].capitalize %> </h1>

<!-- Skills Section -->
  <div class="skills-section">
    <h3>Skills</h3>
    <div class="skills">
      <strong><%= @user_skill.skill.name %></strong> - <%= @user_skill.experience %> - Rating: <%= @user_skill.overall_rating %>/5
      <% @user_skills_sorted.each do |user_skill| %>
        <div class="skill">
          <strong><%= user_skill.skill.name %></strong> - <%= user_skill.experience %> - Rating: <%= user_skill.overall_rating %>/5
        </div>
      <% end %>
    </div>
  </div>


!-- Scroll down arrow -->
  <div class="scroll-down-arrow">
    <a href="#reviews-section">
      <img src="https://upload.wikimedia.org/wikipedia/commons/4/47/Down_Arrow_Icon.svg" alt="Scroll down" class="arrow-icon">
    </a>
  </div>


<%= link_to "Go to Chat", user_skill_requests_path(@user.user_skills.first), data:{turbo_method: :post}, class: "btn btn-primary" %>
