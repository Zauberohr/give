<% if current_user %>

  <h2>About App</h2>
  <div>
    <li class="about-card card">
      <p>Got a talent? Learn a new one in return! Give App connects people to exchange skills – no fees, just fair trade. Teach what you know, learn what you love, and grow together. Ready to swap skills?
    </li>
  </div>

  <div  class="profile-card card">
    <img src="https://tse4.mm.bing.net/th?id=OIP.uUxS_4vd-3o24MwLBT7HSwHaG3&pid=Api&P=0&h=180" alt="Profile Picture" 
       style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover;">
    <h3>👋<%= @user.name %></h3>
    <p>📍<%= @user.city %></p>
    <p>🪄<%= @user.skills.map(&:name).join(", ") %></p>
    <p>🪙<%= @user.balance %> credits</p>
  </div>

  <h2>Quick Search</h2>
  <div class="skills-card card">
    <% Skill.all.sample(10).each do |skill| %>
      <span class="badge rounded-pill pill"><%= skill.name %></span>
    <% end %>
  </div>

  <h2>Trending now</h2>

  <% @user_skills.each do |user_skill| %>
    <%= render "user_skills/user_skill", user_skill: user_skill %>
  <% end %>

<% else %>


    <%# <div class="homepage-standard"> %>
      <%# <%= image_tag "TGkoralle.png" %>
      <h1>Goodbye</h1>

      <div class="homepage-standard">
        <%= form_with url: user_skills_path, method: :get do %>
          <%= submit_tag "Sign-in/Sign-up", name: "", class: "btn btn-primary signup-home" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
