<% if current_user %>

  <h2>About the App</h2>
  <div>
    <li class="about-card card">
      <p>Got a talent? Learn a new one in return! Give App connects people to exchange skills – no fees, just fair trade. Teach what you know, learn what you love, and grow together. Ready to swap skills?
    </li>
  </div>

  <!-- Your Profile auf Startseite -->
  <h2>Your Profile</h2>
  <div class="profile-card card">
    <!-- 1. Reihe: Username : Profilbild : User.city -->
    <div class="profile-header">
      <div class="d-flex flex-column"> <h3>👋 </h3> <h3> <%= @user.name %> </h3> </div>
      <%= cl_image_tag @user.photo.key, class: "rounded-image", alt: "user profile picture" %>
     <div class="d-flex flex-column"> <h3>📍</h3> <h3> <%= @user.city %></h3></div>
    </div>

    <!-- 2. Reihe: Skills -->
    <div class="profile-skills">
     <%= @user.skills.map(&:name).join(", ") %>
    </div>

    <!-- 3. Reihe: Balance -->
    <%= link_to dashboard_path, class:"home-credit-link" do %>
      <div class="profile-balance">
        <h1>Credit: <%= @user.balance %> <%= image_tag "yellowpink.png", class:"give-coin-profile"%></h1>
      </div>
    <% end %>
  </div>
  <br>
  <h2>Quick Search</h2>
  <div class="skills-card card">
    <% Skill.all.sample(10).each do |skill| %>
      <span class="badge rounded-pill pill"><%= link_to skill.name, user_skills_path(query: skill.name) %></span>
    <% end %>
  </div>

  <h2>Now on trend</h2>
  <% if @user_skills.present? %>
  <% @user_skills.each do |user_skill| %>
    <%= render "user_skills/user_skill", user_skill: user_skill, details: false %>
  <% end %>
<% else %>
  <p>No trending skills found.</p>
<% end %>


